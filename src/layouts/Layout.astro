---
import Menu from "../components/Menu.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Menu
			isOpen={true}
			links={[
				{
					href: "#1",
					label: "Sobre Mim",
				},
				{
					href: "#2",
					label: "Formação",
				},
				{
					href: "#3",
					label: "Experiência",
				},
				{
					href: "#4",
					label: "Projetos",
				},
				{
					href: "#5",
					label: "Contato",
				},
			]}
		/>
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: "nunito";
		src: url("/fonts/nunito/Nunito-Regular.ttf") format("truetype");
	}
	@font-face {
		font-family: "nunito-bold";
		src: url("/fonts/nunito/Nunito-Bold.ttf") format("truetype");
	}
	html {
		font-family: system-ui, sans-serif;
		background: #f1f5ff;
		scroll-behavior: smooth;
	}

	::-webkit-scrollbar {
		width: 6px; /* Adjust width as needed */
	}

	::-webkit-scrollbar-track {
		background: #f1f5ff; /* Match your background color */
	}

	::-webkit-scrollbar-thumb {
		background: linear-gradient(to bottom, rgb(255, 166, 0), rgb(86, 0, 172));
		border-radius: 4px; /* Add rounded corners */
	}

	::-webkit-scrollbar-thumb:hover {
		background: linear-gradient(
			to top,
			rgba(255, 166, 0, 0.8),
			rgba(86, 0, 172, 0.8)
		);
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	main {
		font-family: 'nunito';
		margin: 80px auto;
		padding: 3rem;
		width: 1080px;
		max-width: calc(100% - 2rem);
		color: rgb(0, 0, 0);
		font-size: 16px;
		line-height: 1.6;
	}

	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.header-container {
		position: fixed; /* Stays in place when scrolling */
		top: 0; /* Positioned at the top */
		left: 0; /* Starts from the left edge */
		width: 100%; /* Takes the full width */
		height: 120px; /* 100px height */
		background-image: linear-gradient(
			to bottom,
			rgba(241, 245, 255, 1), /* Fully opaque at top */
			rgba(241, 245, 255, 0) /* Fully transparent at bottom */
		);
		z-index: 1; /* Ensure it's above other content */
	}

	.header-box {
		position: fixed; /* Stays in place when scrolling */
		top: 0; /* Positioned at the top */
		left: 0; /* Starts from the left edge */
		width: 100%; /* Takes the full width */
		height: 200px; /* 100px height */
		background-image: linear-gradient(
			to bottom,
			rgba(241, 245, 255, 1), /* Fully opaque at top */
			rgba(241, 245, 255, 0) /* Fully transparent at bottom */
		);
		z-index: 1; /* Ensure it's above other content */
	}

	.header {
		position: fixed;
		right: 0;
		font-family: "nunito-bold";
		padding: 15px;
		justify-content: end;
		display: flex;
		flex-direction: row;
	}

	.header ul {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
	}

	.header ul li {
		position: relative;
		border-radius: 15px;
		padding: 5px;
		margin-right: 20px;
		overflow: hidden; /* Para esconder o conteúdo da pseudo-classe */
	}

	.selected {
  		color: lightgray !important; /* Ou outro estilo para indicar seleção */
	}

	.header ul li::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: linear-gradient(
			to left,
			rgba(255, 166, 0, 0.2),
			rgba(86, 0, 172, 0.2)
		);
		opacity: 0;
		transition: opacity 0.3s ease-in-out;
	}

	.header ul li:hover::before {
		opacity: 1;
	}

	.header ul li a {
		position: relative; /* Faz com que o link tenha um nível de `z-index` acima do pseudo-elemento */
		z-index: 1; /* Garante que o link esteja acima do pseudo-elemento */
		display: inline-block;
		text-decoration: none;
		background-image: linear-gradient(
			to left,
			rgb(255, 166, 0),
			rgb(86, 0, 172)
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
</style>
